  <script>
    function toggleBlog(card) {
      const content = card.querySelector(".blog-content");
      const allCards = document.querySelectorAll(".blog-content");
      allCards.forEach(c => {
        if (c !== content) c.style.display = "none";
      });
      content.style.display = content.style.display === "block" ? "none" : "block";
    }

    function rateBlog(e, starSet) {
      e.stopPropagation();
      const stars = starSet.querySelectorAll(".star");
      const clickedIndex = Array.from(stars).indexOf(e.target);
      stars.forEach((star, i) => {
        star.classList.toggle("active", i <= clickedIndex);
      });
    }
  </script>
